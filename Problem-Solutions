// Coletar o valor do lado de um quadrado, calcular sua área e apresentar o resultado.

import kotlin.math.pow

fun main() {

    troca_valores()

}

fun quadrado() {
    println("Digite o lado do quadrado: ")
    val lado = readln().toDouble()
    val area = lado.pow(2.0)

    println("A area do quadrado é: $area")
}

// Receba o salário de um funcionário e mostre o novo salário com reajuste de 15%.

fun salario() {
    print("Digite o valor do seu salário: ")
    val salary = readln().toDouble()
    println("Seu salário reajustado em 15% é de: " + salary * 1.15)
}

// Receba a base e a altura de um triângulo. Calcule e mostre a sua área.

fun triangulo() {
    println("Digite o valor da base: ")
    println("Digite o valor da altura: ")
    val base = readln().toDouble()
    val altura = readln().toDouble()

    println(base * altura / 2)
}

// Receba a temperatura em graus Celsius. Calcule e mostre a sua temperatura convertida em fahrenheit F = (9*C+160) /5.

fun celsius() {
    println("Digite a temperatura em Celsius: ")
    val celsius = readln().toDouble()
    println("A temperatura convertida em fahrenheit é de: " + (9 * celsius + 160) / 5)
}

// Receba os coeficientes A, B e C de uma equação do 2º grau //(AX²+BX+C=0). Calcule e mostre as raízes reais (considerar que a //equação possue2 raízes).

fun baskara() {
val a = readln("Digite o valor de a: ").toDouble()
val b = readln().toDouble()
val c = readln().toDouble()

delta = (b.pow(2.0) - 4 * a * c)

    val x1 = (- b + delta.pow / 2 (2 * a)
    val x2 = (- b - delta.pow / 2 (2 * a)

    println("O valor das raízes são: $x1 e $x2")
}

